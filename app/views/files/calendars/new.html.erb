<% provide(:section_title, "Upload Calendar file") %>
<div>
  <%= form_tag import_files_calendars_path, multipart: true do %>
      <div class="form-group">
        <%= file_field_tag :file %>
      </div>
      <div class="form-group">
        <%= button_tag "Import", { data: { disable_with: "<i class='fa fa-refresh fa-spin'></i> Uploading..." } , :class => 'btn btn-primary'}  %>
      </div>

  <% end %>
</div>
