<% provide(:section_title, "Upload Closeout #{@closeout_type == 'debit' ? 'Debit' : 'Credit' } File") %>
<div>
  <%= form_tag import_files_closeouts_path, multipart: true do %>
      <%= hidden_field_tag 'type', @closeout_type %>
      <div class="form-group">
        <%= file_field_tag :file %>
      </div>
      <div class="form-group">
        <%= button_tag "Import", { data: { disable_with: "<i class='fa fa-refresh fa-spin'></i> Uploading..." } , :class => 'btn btn-primary btn-flat'}  %>
      </div>

  <% end %>
</div>