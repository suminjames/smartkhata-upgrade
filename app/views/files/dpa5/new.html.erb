<div>
  <h2>Upload DPA5 file</h2>
  <%= form_tag import_files_dpa5_index_path, multipart: true do %>
      <div class="form-group">
        <%= file_field_tag :file %>
      </div>
      <div class="form-group">
        <%= button_tag "Import", { data: { disable_with: "<i class='fa fa-refresh fa-spin'></i> Uploading..." } , :class => 'btn btn-primary'}  %>
      </div>

  <% end %>
</div>



<div class="panel panel-danger">
  <div class="panel-heading">
    List of file uploaded
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Date of Report</th>
          <th>Date of Report(BS)</th>
          <th>Last Updated</th>
        </tr>
        </thead>
        <tbody>
        <% @file_list.each do |file| %>
            <tr>
              <td><%= file.report_date %> </td>
              <td><%= ad_to_bs_string(file.report_date) %> </td>
              <td><%= file.updated_at.to_date %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="text-center">
      <%= link_to "View Full List", files_dpa5_index_path %>
    </div>
  </div>
</div>


