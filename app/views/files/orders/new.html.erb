<% provide(:section_title, "Upload Order file") %>
<div>
  <%= form_tag import_files_orders_path, multipart: true do %>
      <div class="form-group">
        <%= file_field_tag :file %>
      </div>
      <div class="form-group">
        <%= submit_tag "Import", {:class => 'btn btn-primary'} %>
      </div>

  <% end %>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    List of file uploaded
  </div>
  <div class="panel-body">
    <% if @file_list.present? %>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Date of Report</th>
            <th>Date of Report(BS)</th>
            <th>Last Updated</th>
          </tr>
          </thead>
          <tbody>
          <% @file_list.each do |file| %>
              <tr>
                <td><%= file.report_date %> </td>
                <td><%= ad_to_bs_string(file.report_date) %> </td>
                <td><%= file.updated_at.to_date %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <% if @list_incomplete %>
        <div class="text-center">
          <%= link_to "View Full List", files_orders_path %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center text-muted">
        No order file uploaded yet.
      </div>
    <% end %>

  </div>
</div>
