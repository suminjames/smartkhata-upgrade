
<% provide(:section_title, "Orders") %>

<!-- The following is executed when redirected from "Report's Order"-->
<% if params[:show] == 'report'%>
  <%= render "report", :orders => @orders %>
<% end %>

<!-- The following is executed when redirected from "File Upload's Order's Views/Actions"-->
<% if params[:show] != 'report'%>
  <%= link_to "Go Back", new_files_order_path %>
  <% if !@file_list.blank? %>
    <div class="text-center">
      <%= paginate @file_list, :theme => 'twitter-bootstrap-3'%>
      <div class="text-center">
        <%= page_entries_info @file_list %>
      </div>
    </div>

    <div class="panel panel-danger">
      <div class="panel-heading">
        List of Order files uploaded
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Date of Report</th>
                <th>Date of Report(BS)</th>
                <th>Last Updated</th>
              </tr>
            </thead>
            <tbody>
              <% @file_list.each do |file| %>
                <tr>
                  <td><%= file.report_date %> </td>
                  <td><%= ad_to_bs(file.report_date) %> </td>
                  <td><%= file.updated_at.to_date %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="text-center">
      <%= paginate @file_list, :theme => 'twitter-bootstrap-3'%>
      <div class="text-center">
        <%= page_entries_info @file_list %>
      </div>
    </div>
    <%= link_to "Go Back", new_files_order_path %>
  <% end %>
<% end %>
