<% provide(:section_title, "Upload Sales CM file") %>
<p> Upload file should be in csv format </p>
<div>
  <%= form_tag import_files_sales_path, multipart: true do %>
      <div class="form-group">
        <%= file_field_tag :file %>
      </div>
      <div class="form-group">
        <%= button_tag "Import", { data: { disable_with: "<i class='fa fa-refresh fa-spin'></i> Uploading..." } , :class => 'btn btn-primary'}  %>
      </div>

  <% end %>
</div>

<%= render 'list', settlements: @settlements %>

<% if @settlements.present? %>
    <div class="text-center">
      <%= link_to "View Full List", files_sales_path %>
    </div>
<% end %>
