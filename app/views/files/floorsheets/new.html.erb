<% provide(:section_title, "Upload FloorSheet file") %>
<p> Upload file should be in xls format </p>
<div>
	<%= form_tag import_files_floorsheets_path, multipart: true do %>
		<div class="form-group">
			<%= file_field_tag :file %>
		</div>
		<div class="form-group">
			<%= submit_tag "Import" ,   { :class => 'btn btn-primary' } %>
		</div>

	<% end %>
</div>

<div class="panel panel-danger">
  <div class="panel-heading">
    List of file uploaded
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Date of Report</th>
          <th>Date of Report(BS)</th>
          <th>Last Updated</th>
        </tr>
        </thead>
        <tbody>
        <% @file_list.each do |file| %>
            <tr>
              <td><%= file.report_date %> </td>
              <td><%= ad_to_bs(file.report_date) %> </td>
              <td><%= file.updated_at.to_date %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= link_to "View Full List" , files_floorsheets_path ,{ :class => 'button-xs' } %>