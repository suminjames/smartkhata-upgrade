<p id="notice"><%= notice %></p>

<h1>Listing Receipts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Amount</th>
      <th>Date bs</th>
      <th>Description</th>
      <th>Cheque entry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receipts.each do |receipt| %>
      <tr>
        <td><%= receipt.name %></td>
        <td><%= receipt.amount %></td>
        <td><%= receipt.amount %></td>
        <td><%= receipt.date_bs %></td>
        <td><%= receipt.description %></td>
        <td><%= receipt.cheque_entry_id %></td>
        <td><%= link_to 'Show', receipt %></td>
        <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
        <td><%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

