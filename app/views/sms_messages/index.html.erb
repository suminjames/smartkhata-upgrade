<p id="notice"><%= notice %></p>
<% provide(:section_title, "SMS History") %>

<%= form_for_filterrific @filterrific, html: {id: 'filterrific-no-ajax-auto-submit'} do |f| %>
    <div class="panel panel-default filter-form">
      <div class="panel-body">
        <div class="row">

          <div class="col-xs-3">
            <label>
              Client
            </label>
            <%= f.collection_select(
                    :by_client_id,
                    @filterrific.select_options[:by_client_id],
                    :id,
                    :name_and_nepse_code,
                    {include_blank: true},
                    {class: 'form-control combobox combobox-select min-3', 'data-placeholder': '- Any -' }) %>
          </div>

          <div class="col-xs-3">
            <label>
              SMS Type
            </label>
            <%= f.select(
                    :by_sms_message_type,
                    @filterrific.select_options[:by_sms_message_type],
                    {include_blank: true},
                    {class: 'form-control combobox combobox-select', 'data-placeholder': '- Any -' }) %>
          </div>

          <div class="col-xs-2">
            <label>
              Date
            </label>
            <br>
            <%= f.text_field(
                    :by_date,
                    :placeholder => 'YYYY-MM-DD',
                    class: 'form-control') %>
          </div>

          <div class="col-xs-4">
            <div class="clearfix">
              <div class="text-center">
                <label>
                  Date Range
                </label>
              </div>
            </div>
            <div class="clearfix">
              <div class="col-xs-6">
                <%= f.text_field(
                        :by_date_from,
                        :placeholder => 'YYYY-MM-DD',
                        class: 'form-control') %>
              </div>
              <div class="col-xs-6">
                <%= f.text_field(
                        :by_date_to,
                        :placeholder => 'YYYY-MM-DD',
                        class: 'form-control') %>
              </div>
            </div>
          </div>

        </div>

        <div class="row top-buffer-sm">
          <div class="col-xs-3">
            <%= f.submit 'Search', :class => 'btn btn-xs btn-primary btn-flat' %>
            <%= link_to('Reset filters', reset_filterrific_url, class: 'filterrific-reset')                         %>
            <%= image_tag("ajax-loader.gif", class: "spinner-circular hidden ", id: 'filteriffic-spinner') %>
          </div>
        </div>
      </div>
      <%# add an automated spinner to your form when the list is refreshed %>
      <%= render_filterrific_spinner %>
    </div>
<% end %>

<%= render(
        partial: 'sms_messages/list',
        locals: {sms_messages: @sms_messages}
    )
%>
