<%= simple_form_for(@settlement) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :amount %>
      <%= f.input :date_bs %>
      <%= f.input :description %>
      <%= f.input :settlement_type %>
      <%= f.association :voucher %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
