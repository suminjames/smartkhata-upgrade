<div class="row">
  <div class="col-xs-6">
    <%= simple_form_for(@vendor_account) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :phone_number %>
        </div>

        <div class="form-actions">
          <%= f.button :submit %>
        </div>
    <% end %>
  </div>
</div>

