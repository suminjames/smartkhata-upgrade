<div class="row">
  <div class="col-xs-6">
    <%= simple_form_for(@bank) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :bank_code %>
          <%= f.input :address %>
          <%= f.input :contact_no %>
        </div>
        <div class="form-actions">
          <%= f.button :submit %>
        </div>
    <% end %>
  </div>
</div>
