<% provide(:section_title, "Listing User Access Roles") %>
<table class="table">
  <thead>
    <tr>
      <th>Role Name</th>
      <th>Role Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_access_roles.each do |user_access_role| %>
      <tr>
        <td><%= user_access_role.role_name %></td>
        <td><%= user_access_role.description %></td>
        <td><%= link_to 'Show', user_access_role %></td>
        <td><%= link_to 'Edit', edit_user_access_role_path(user_access_role) %></td>
        <td><%= link_to 'Destroy', user_access_role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if is_authorized_to_access? new_user_access_role_path %>
  <%= link_to 'New User access role', new_user_access_role_path %>
<% end %>