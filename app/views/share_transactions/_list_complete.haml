- unless smart_listing.empty?
  %table.table.table-striped
    %thead
      %th.col-xs-4= "Company Name"
      %th.col-xs-3= "Client"
      %th.col-xs-2= "Quantity"
      %th.col-xs-1= "Rate"
      %th.col-xs-1= "Base Price"
      %th.col-xs-1= "CGT"
    %tbody
      - smart_listing.collection.each do |o|
        %tr.editable{data: {id: o.id}}
          -# Render share transaction row partial
          = smart_listing.render object: o, partial: "share_transactions/share_transaction_no_edit", locals: {object: o}
  = smart_listing.paginate
  = smart_listing.pagination_per_page_links
- else
  %p.warning No records!
