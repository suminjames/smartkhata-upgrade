%p#notice= notice
- provide(:section_title, "Transactions with closeout")

= form_for_filterrific @filterrific, html:  { id: 'filterrific-no-ajax-auto-submit' } do |f|
  = hidden_field_tag(:paginate, params[:paginate])
  .panel.panel-default.filter-form
    .panel-body
      .row
        .col-sm-3
          %label
            Client
          - if User.client_logged_in?
            - client_id = params.dig(:filterrific, :by_client_id)
            %br
            = ClientAccount.find_by_id(client_id).try(:name_and_nepse_code)
            = f.hidden_field(:by_client_id, :value => client_id)
          - else
            = f.collection_select(                        |
              :by_client_id,                              |
              @filterrific.select_options[:by_client_id], |
              :id,                                        |
              :name_and_nepse_code,                                      |
              {include_blank: true},                 |
              {class: 'form-control combobox combobox-select min-3', id: 'client_accounts_index_combobox', 'data-placeholder': '- Any -' }) |
          %div.top-buffer-md
            = f.submit 'Search', :class => 'btn btn-sm btn-primary btn-flat'
            - unless User.client_logged_in?
              = link_to('Reset filters', reset_filterrific_url, class: 'filterrific-reset')
            = image_tag("ajax-loader.gif", class: "spinner-circular hidden ", id: 'filteriffic-spinner')
        .col-sm-3
          %label
            Company
          = f.collection_select(                        |
            :by_isin_id,                              |
            @filterrific.select_options[:by_isin_id], |
            :id,                                        |
            :name_and_code,                                      |
            {include_blank: true},                 |
            {class: 'form-control combobox combobox-select', 'data-placeholder': '- Any -' }) |
        .col-sm-2
          %label
            Date
          %br
          = f.text_field(                 |
            :by_date,                     |
            :placeholder => 'YYYY-MM-DD', |
            class: 'form-control' )       |
        .col-sm-2.text-center
          %label
            Date Range
          .clearfix
            .row
              = f.text_field(                 |
                :by_date_from,                |
                :placeholder => 'YYYY-MM-DD', |
                class: 'form-control' )       |
            .row.top-buffer-sm
              = f.text_field(                 |
                :by_date_to,                  |
                :placeholder => 'YYYY-MM-DD', |
                class: 'form-control' ) |
    = render_filterrific_spinner

= render(partial: 'share_transactions/list_closeouts_filterrific', locals: { share_transactions: @share_transactions} )

