-#This view is called by #index action.
%div#filterrific_results.glike-action-container

  - if share_transactions
    %div.bottom-buffer-sm
      .btn-group
        %button.btn.btn-sm.btn-default.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
          %span.glyphicon.glyphicon-download-alt{"aria-hidden" => "true"}
          Download
          %span.caret
        %ul.dropdown-menu
          %li
            = link_to 'Excelsheet', @download_path_xlsx
          %li
            = link_to 'PDF', @download_path_pdf, :target => "_blank"
    %br
    %div.row.top-buffer-sm
      %div.col-xs-12
        %div.btn-group.action.btnMarkCloseout.processed.btn-disabled
          %span.glyphicon.glyphicon-transfer
          %span= 'Mark Selected as Processed'
          =image_tag "ajax-loader.gif", class: "spinner-circular hidden ", id: 'closeout-mark-processed'
        |
        %div.btn-group.action.btnMarkCloseout.pending.btn-disabled
          %span.glyphicon.glyphicon-transfer
          %span= 'Mark Selected as Pending'
          =image_tag "ajax-loader.gif", class: "spinner-circular hidden ", id: 'closeout-mark-pending'

        %div.col-xs-offset-9.col-xs-3.top-buffer-sm
          %div.row
            %div.col-xs-1
              %div.box-sm.indicator-bg-light-red
            %div.col-xs-8
              Pending Processing

  = render 'shared/pagination', collection_to_paginate: share_transactions

  %div#share_transaction_list.items-to-act-container

    -if share_transactions
      =react_component('Closeouts', share_transactions: share_transactions.map{|x| x.as_json})
    - if !share_transactions || share_transactions.empty?
      %div.row.text-center.top-buffer-md
        There are no matching share transactions.

  = render 'shared/pagination', collection_to_paginate: share_transactions
