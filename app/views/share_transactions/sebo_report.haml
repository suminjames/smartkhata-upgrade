%div#sebo_report_list
	-if @share_transactions.present?
		%div.table-responsive
			%table.table.table-bordered
				%thead
					%th.text-center= 'S.no'
					%th.text-center= 'Company Name'
					%th.text-center= 'Buying Trans'
					%th.text-center= 'Buying Qty'
					%th.text-center= 'Buying Amt'
					%th.text-center= 'Sebo Comm'
					%th.text-center= 'Comm. Amt'
					%th.text-center= 'Nepse Comm'
					%th.text-center= 'TDS'
					%th.text-center= 'Amount to Nepse'
					%th.text-center= 'Selling Trans'
					%th.text-center= 'Selling Qty'
					%th.text-center= 'Selling Amt'
					%th.text-center= 'Comm Amt'
					%th.text-center= 'TDS'
					%th.text-center= 'Sebo Comm'
					%th.text-center= 'Nepse Comm'
					%th.text-center= 'Capital Gain'
					%th.text-center= 'Amt. From Nepse'
					%th.text-center= 'Total Trans'
					%th.text-center= 'Total Qty'
					%th.text-center= 'Total Amount'
				%tbody
					-@share_transactions.each_with_index do |share_transaction, index|
						%tr
							%td= index+1
							%td=share_transaction.isin_info.company
							%td=share_transaction.buy_transaction_count
							%td=share_transaction.buy_quantity 
							%td=share_transaction.buying_amount
							%td=share_transaction.buy_sebo_comm
							%td=share_transaction.buy_comm_amount
							%td=share_transaction.buy_nepse_comm
							%td=share_transaction.buy_tds
							%td=share_transaction.amount_to_nepse
							%td=share_transaction.selling_transaction_count
							%td=share_transaction.selling_quantity
							%td=share_transaction.selling_amount
							%td=share_transaction.selling_comm_amount
							%td=share_transaction.selling_tds
							%td=share_transaction.selling_sebo_comm
							%td=share_transaction.selling_nepse_comm
							%td=share_transaction.total_cgt
							%td=share_transaction.amount_from_nepse
							%td=share_transaction.total_transaction_count
							%td=share_transaction.total_quantity
							%td=share_transaction.total_amount
	-else
		%div.row.text-center.top-buffer-md
			There are no matching securities flows.