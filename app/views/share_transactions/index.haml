%p#notice= notice
- provide(:section_title, "Share Inventory")

= form_for_filterrific @filterrific, html:  { id: 'filterrific-no-ajax-auto-submit' } do |f|
  .panel.panel-default.filter-form
    .panel-body
      .row
        .col-xs-3
          %label
            Client
          = f.collection_select(                        |
            :by_client_id,                              |
            @filterrific.select_options[:by_client_id], |
            :id,                                        |
            :name_and_nepse_code,                                      |
            {include_blank: '- Any -'},                 |
            {class: 'form-control combobox' })          |
          %div.top-buffer-md
            = f.submit 'Search'
            = link_to(                  |
                  'Reset filters',      |
                  reset_filterrific_url |
              )                         |
        .col-xs-3
          %label
            Company
          = f.collection_select(                        |
            :by_isin_id,                              |
            @filterrific.select_options[:by_isin_id], |
            :id,                                        |
            :name_and_code,                                      |
            {include_blank: '- Any -'},                 |
            {class: 'form-control combobox' })    |
        .col-xs-2
          %label
            Date
          %br
          = f.text_field(                 |
            :by_date,                     |
            :placeholder => 'YYYY-MM-DD', |
            class: 'form-control' )       |
        .col-xs-2.text-center
          %label
            Date Range
          .clearfix
            .row
              = f.text_field(                 |
                :by_date_from,                |
                :placeholder => 'YYYY-MM-DD', |
                class: 'form-control' )       |
            .row.top-buffer-sm
              = f.text_field(                 |
                :by_date_to,                  |
                :placeholder => 'YYYY-MM-DD', |
                class: 'form-control' )       |
    = render_filterrific_spinner


= render(partial: 'share_transactions/list_filterrific', locals: { share_transactions: @share_transactions} )

