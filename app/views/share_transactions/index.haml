%p#notice= notice
- section_title = params[:filterrific] && params[:filterrific][:by_transaction_cancel_status] ? 'Share Inventory: Cancelled Transaction' : 'Share Inventory'
- provide(:section_title, section_title)

= form_for_filterrific @filterrific, html:  { id: 'filterrific-no-ajax-auto-submit' } do |f|
  .panel.panel-default.filter-form
    .panel-body
      .row
        .col-xs-3
          %label
            Client
          = f.collection_select(                        |
            :by_client_id,                              |
            @filterrific.select_options[:by_client_id], |
            :id,                                        |
            :name_and_nepse_code,                                      |
            {include_blank: true},                 |
            {class: 'form-control combobox combobox-select min-3', 'data-placeholder': '- Any -' })          |
          %div.top-buffer-md
            = f.submit 'Search', :class => 'btn btn-xs btn-primary btn-flat'
            = link_to('Reset filters', reset_filterrific_url, class: 'filterrific-reset')
            = image_tag("ajax-loader.gif", class: "spinner-circular hidden ", id: 'filteriffic-spinner')
        .col-xs-3
          %label
            Company
          = f.collection_select(                        |
            :by_isin_id,                              |
            @filterrific.select_options[:by_isin_id], |
            :id,                                        |
            :name_and_code,                                      |
            {include_blank: true},                 |
            {class: 'form-control combobox combobox-select', 'data-placeholder': '- Any -' }) |
        .col-xs-2
          %label
            Date
          %br
          = f.text_field(                 |
            :by_date,                     |
            :placeholder => 'YYYY-MM-DD', |
            class: 'form-control' )       |
        .col-xs-2.text-center
          %label
            Date Range
          .clearfix
            .row
              = f.text_field(                 |
                :by_date_from,                |
                :placeholder => 'YYYY-MM-DD', |
                class: 'form-control' )       |
            .row.top-buffer-sm
              = f.text_field(                 |
                :by_date_to,                  |
                :placeholder => 'YYYY-MM-DD', |
                class: 'form-control' )       |
    = render_filterrific_spinner

= render(partial: 'share_transactions/list_filterrific', locals: { share_transactions: @share_transactions} )

