<h2 class="text-center">XYZ Private Limited</h2>
<h3 class="text-center">Balance Sheet</h3>
<h4 class="text-center">As on today</h4>
<div class="row">
  
  <div class="col-xs-6">
    <% @balance_cr.each do |assets| %>
      <div class="col-xs-6"><%= assets[0] %></div>
      <div class="col-xs-6"><%= assets[1] > 0 ? assets[1] * -1 : assets[1].abs %></div> 
    <% end %>
    <div class="col-xs-6">Opening Balance Difference</div>
    <div class="col-xs-6"><%= @opening_balance_diff %></div>
  </div>

  <div class="col-xs-6">
    <% @balance_dr.each do |assets| %>
      <div class="col-xs-6"><%= assets[0] %></div>
      <div class="col-xs-6"><%= assets[1] %></div>    
    <% end %>
  </div>

</div>



<h2 class="text-center">XYZ Private Limited</h2>
<h3 class="text-center">Profile Sheet</h3>
<h4 class="text-center">As on today</h4>
<div class="row">
  
  <div class="col-xs-6">
    <% @loss.each do |assets| %>
      <div class="col-xs-6"><%= assets[0] %></div>
      <div class="col-xs-6"><%= assets[1] %></div>    
    <% end %>
    <% if @amnt < 0 %>
      <div class="col-xs-6">Profit</div>
      <div class="col-xs-6"><%= @amnt.abs %></div>
    <% end %>
  </div>

  <div class="col-xs-6">
  <% @profit.each do |assets| %>
      <div class="col-xs-6"><%= assets[0] %></div>
      <div class="col-xs-6"><%= assets[1] > 0 ? assets[1] * -1 : assets[1].abs %></div> 
    <% end %>
    <% if @amnt > 0 %>
      <div class="col-xs-6">Loss</div>
      <div class="col-xs-6"><%= @amnt %></div>
    <% end %>
    
  </div>
  
</div>