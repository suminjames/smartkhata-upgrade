<%= simple_form_for(@menu_item) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :path %>
      <%= f.input :hide_on_main_navigation %>
      <%= f.input :references %>
      <%= f.input :code %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
