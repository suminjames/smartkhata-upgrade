<%= simple_form_for(@bank_account) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :account_number %>
    <%= f.input :address %>
    <%= f.input :contact_number %>
    <!-- <%= f.input :default_for_sales %>
    <%= f.input :default_for_purchase %> -->

    <h3>Ledger Details</h3>
    <div class="row">
      <%= f.fields_for :ledger do |p| %>
        <div class="col-xs-3"><%= p.input :opening_blnc %></div>
        <div class="col-xs-3"><label>Type</label><%= p.select :opening_blnc_type, options_for_select(Particular.transaction_types) %></div>
      <% end %>
    </div>


  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
