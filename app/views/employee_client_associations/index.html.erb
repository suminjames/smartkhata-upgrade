<% provide(:section_title, "Employee Client Association") %>

<h3>Listing Employees </h3>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_client_associations.each do |employee_client_association| %>
      <tr>
        <td><%= link_to 'Show', employee_client_association %></td>
        <td><%= link_to 'Edit', edit_employee_client_association_path(employee_client_association) %></td>
        <td><%= link_to 'Destroy', employee_client_association, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table>
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @employees.each do |employee| %>
      <tr>
        <td><%=employee.name + ' (' + employee.id.to_s + ')'%></td>
        <td><%=link_to 'Edit', edit_employee_client_association_path(employee.id) %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

