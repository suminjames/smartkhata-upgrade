<%= simple_form_for(@branch) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :code %>
      <%= f.input :address %>
      <%= f.input :top_nav_bar_color, as: :minicolors, input_html: {data: {
            minicolors: {theme: :bootstrap, position: :right}}} %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
