<%= simple_form_for(@branch) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs"  >
      <%= f.input :code %>
      <%= f.input :address %>
      <%= f.input :top_nav_bar_color, as: :minicolors, input_html: {data: { toggle: 'colorpicker',
            minicolors: {theme: :bootstrap}}, :id => "branch_top_nav_bar_color"} %>
      <p> Or select from the ones below
      <div id="recommended_colors">
        <div class="color-box color-box-clickable" id="green" data-color="#1f7052"><span class="glyphicon glyphicon-ok hidden"></span></div>
        <div class="color-box color-box-clickable" id="blue" data-color="#294961"><span class="glyphicon glyphicon-ok hidden"></span></div>
        <div class="color-box color-box-clickable" id="brown" data-color="#593232"><span class="glyphicon glyphicon-ok hidden"></span></div>
        <div class="color-box color-box-clickable" id="black" data-color="#1a2226"><span class="glyphicon glyphicon-ok hidden"></span></div>
        <div class="color-box color-box-clickable" id="maroon" data-color="#730e15"><span class="glyphicon glyphicon-ok hidden"></span></div>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
